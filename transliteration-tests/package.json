{
  "name": "transliteration-tests",
  "version": "1.0.0",
  "description": "Playwright automation tests for Singlish to Sinhala transliteration",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright test --reporter=html",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "codegen": "playwright codegen https://www.swifttranslator.com/",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "start": "ts-node run-tests.ts"
  },
  "keywords": [
    "playwright",
    "testing",
    "transliteration",
    "sinhala",
    "singlish"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
